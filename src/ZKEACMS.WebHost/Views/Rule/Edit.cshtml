@model ZKEACMS.Rule.Rule
@{
    Script.Reqiured("validate").AtFoot();

}
<div class="panel panel-default">
    <div class="panel-heading">
        编辑
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(PermissionKeys.ManageApplicationSetting))
                {
                    <input type="submit" class="btn btn-primary" value="保存" data-value="@ActionType.Update" />
                    <input type="submit" value="删除" class="btn btn-danger delete" data-value="@ActionType.Delete" />
                }
                <input type="button" class="btn btn-default cancel" value="取消" />
            </div>
        }
    </div>
</div>
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(".delete").click(function () {
            return confirm("确定要删除吗？");
        });
    </script>
}