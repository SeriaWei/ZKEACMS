@model ZKEACMS.Common.Models.StyleSheetWidget
@if (Model.StyleSheet.IsNullOrEmpty())
{
    return;
}
@if (Model.StyleSheet.StartsWith("<link"))
{
    @Html.Raw(Model.StyleSheet)
}
else
{
    <style>
        @Html.Raw(Model.StyleSheet)
    </style>
}
@if (ApplicationContext.As<CMSApplicationContext>().IsDesignMode)
{
    <pre class="code" code="CSS">@Model.StyleSheet</pre>
}