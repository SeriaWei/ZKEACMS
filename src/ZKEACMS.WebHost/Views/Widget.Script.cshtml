@model ZKEACMS.Common.Models.ScriptWidget
@if (Model.Script.IsNullOrEmpty())
{
    return;
}
@if (Model.Script.StartsWith("<script"))
{
    @Html.Raw(Model.Script)
}
else
{
    <script type="text/javascript">
        @Html.Raw(Model.Script)
    </script>
}
@if (ApplicationContext.As<CMSApplicationContext>().IsDesignMode)
{
    <pre class="code" code="JavaScript">@Model.Script</pre>
}