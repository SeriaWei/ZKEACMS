@model LayoutEntity
@{
    Style.Reqiured("Layout").AtFoot();
    Script.Reqiured("validate").AtFoot();
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div>布局</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(PermissionKeys.ManageLayout))
                {
                    <input type="submit" class="btn btn-primary" value="保存" data-value="@ActionType.Create" />
                }
                <input type="button" class="btn btn-default cancel" value="取消" />
            </div>
        }        
    </div>
</div>