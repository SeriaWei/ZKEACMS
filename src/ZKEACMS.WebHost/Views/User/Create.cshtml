@model Easy.Modules.User.Models.UserEntity
@{
    Script.Reqiured("validate").AtFoot();
}

<div class="panel panel-default">
    <div class="panel-heading">
        @L("New")
    </div>
    <div class="panel-body">
        @if (ViewBag.Errormessage != null)
        {
            <div class="text-center alert alert-danger">
                @ViewBag.Errormessage
            </div>
        }
        <form method="post" action="@Url.Action("Create")" enctype="multipart/form-data">
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(PermissionKeys.ManageUser))
                { 
                    <input type="submit" class="btn btn-primary" value="@L("Save")" data-value="@ActionType.Create" />
                }
                <input type="button" class="btn btn-default cancel" value="@L("Cancel")" />
            </div>
        </form>
    </div>
</div>