@using Easy.ViewPort.Descriptor
@model bool
@{
    var descriptor = ViewData.ModelMetadata.GetViewDescriptor();
    SelectList list = new SelectList(new List<SelectListItem>
    {
        new SelectListItem(),
        new SelectListItem(L("Yes").Text,"true"),
        new SelectListItem(L("No").Text,"false")
    },"Value","Text");
}
@Html.DropDownList("", list, descriptor?.ToHtmlProperties())