@model LayoutEntity
@{
    string url = "~/";
    if (Model.Page != null)
    {
        url = Model.Page.Url;
    }
}

<button type="button" class="zk-btn zk-btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only"></span>
</button>
<ul class="zk-dropdown-menu pull-right">
    <li>
        <a href="@Url.Action("Index", "Dashboard")">
            <i class="glyphicon glyphicon-dashboard"></i>
            @L("Ddashboard")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Layout")">
            <i class="glyphicon glyphicon-th-list"></i>
            @L("Layout")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Page")">
            <i class="glyphicon glyphicon-eye-open"></i>
            @L("Page")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Navigation")">
            <i class="glyphicon glyphicon-retweet"></i>
            @L("Navigation")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Theme")">
            <i class="glyphicon glyphicon-blackboard"></i>
            @L("Theme")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Media")">
            <i class="glyphicon glyphicon glyphicon-picture"></i>
            @L("Media")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Carousel")">
            <i class="glyphicon glyphicon-hd-video"></i>
            @L("Carousel")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Article")">
            <i class="glyphicon glyphicon-font"></i>
            @L("Article")
        </a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Product")">
            <i class="glyphicon glyphicon-list-alt"></i>
            @L("Product")
        </a>
    </li>
    <li>
        <a target="_blank" href="http://www.zkea.net/zkeacms/templates">
            <i class="glyphicon glyphicon-save-file"></i>
            @L("Download Sections")
        </a>
    </li>
    <li role="separator" class="divider"></li>
    <li>
        <a href="@Url.Action("Logout", "Account", new { returnurl = url })" target="_self" title="@L("Sign Out")">
            <i class="glyphicon glyphicon-off"></i>
            @L("Sign Out")
        </a>
    </li>
</ul>