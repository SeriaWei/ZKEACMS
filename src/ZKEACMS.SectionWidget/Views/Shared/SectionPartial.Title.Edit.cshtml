@model ZKEACMS.SectionWidget.Models.SectionContentTitle

<li class="list-group-item" data-id="@Model.ID">
    <div class="icon-left clearfix">
        <div class="pull-left icon">
            <i class="text-primary sort-handle glyphicon glyphicon-resize-vertical">
            </i>
            <a href="@Url.Action("Edit", "SectionContentTitle", new {Id = Model.ID})"
               class="dialog glyphicon glyphicon-edit text-primary" 
               data-width="800" data-height="210" title="编辑标题">
            </a>
            <a href="@Url.Action("Delete", "SectionContentTitle", new { Id = Model.ID })" class="ajax glyphicon glyphicon-remove text-danger delete">
            </a>
        </div>
        <div class="pull-left">
            <label class="label label-primary">标题</label>
            @Html.Partial("SectionPartial.Title",Model)
        </div>
    </div>
</li>