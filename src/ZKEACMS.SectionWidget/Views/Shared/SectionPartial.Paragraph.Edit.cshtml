@model SectionContentParagraph

<li class="list-group-item" data-id="@Model.ID">
    <div class="icon-left clearfix">
        <div class="pull-left icon">
            <i class="text-primary sort-handle glyphicon glyphicon-resize-vertical">
            </i>
            <a href="@Url.Action("Edit", "SectionContentParagraph", new {Id = Model.ID})"
               class="dialog glyphicon glyphicon-edit text-primary" 
               data-width="800" data-height="475" title="@L("编辑段落")">
            </a>
            <a href="@Url.Action("Delete", "SectionContentParagraph", new { Id = Model.ID })" class="ajax glyphicon glyphicon-remove text-danger delete">
            </a>
        </div>
        <div class="pull-left edit-pragraph">
            <label class="label label-primary">@L("段落")</label>
            @await Html.PartialAsync("SectionPartial.Paragraph",Model)
        </div>
    </div>
</li>