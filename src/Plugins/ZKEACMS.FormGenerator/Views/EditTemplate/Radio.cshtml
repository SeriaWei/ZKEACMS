<div class="form-group">
    <div class="checkbox">
        <label>
            <input type="checkbox" ng-checked="fieldInfo.IsRequired" ng-click="fieldInfo.IsRequired=!fieldInfo.IsRequired" />
            @L("Required?")
        </label>
    </div>
</div>
<div class="form-group" ng-if="fieldInfo.IsRequired">
    <label class="control-label" for="requiredMessage">@L("Required Message")</label>
    <input type="text" class="form-control" name="requiredMessage" id="requiredMessage" ng-model="fieldInfo.RequiredMessage" />
</div>
<div class="form-group">
    <label class="control-label">
        @L("Option")
    </label>
    <div class="control-group">
        <div style="margin-bottom:10px;" ng-class="{default:option.DefaultSelected}" ng-repeat="option in fieldInfo.FieldOptions | orderBy:'Order'">
            <div>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="@L("Input option")" ng-model="option.DisplayText">
                    <span class="input-group-addon dropdown">
                        <i class="glyphicon glyphicon-remove" ng-click="removeOption(fieldInfo.FieldOptions,option)" data-toggle="dropdown">
                        </i>
                    </span>
                </div>
            </div>
            <div ng-show="fieldInfo.ShowValue">
                <input type="text" ng-model="option.Value" />
                <span class="add-on">
                    <i class="icon-bullhorn dropdown-toggle" data-toggle="dropdown"></i>
                    <code class="dropdown-menu alert alert-info">

                    </code>
                </span>
            </div>
        </div>
    </div>
</div>
<input type="button" class="btn btn-default btn-xs" value="@L("Add")" ng-click="addOption(fieldInfo.FieldOptions)" />
<input type="hidden" class="form-control" name="regexPattern" id="regexPattern" ng-model="fieldInfo.RegexPattern" />
<input type="hidden" class="form-control" name="regexMessage" id="regexMessage" ng-model="fieldInfo.RegexMessage" />