@using ZKEACMS.FormGenerator.Models
@using ZKEACMS.FormGenerator
@model FormData
@{ 
    var host = $"{ViewContext.HttpContext.Request.Scheme}://{ViewContext.HttpContext.Request.Host}";
    string link = $"{host}/admin/FormData/Edit/{Model.ID}";
}
<!DOCTYPE html>
<html>
<head>
    <title>新的表单提醒</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
</head>
<body>
    <div>
        <h3>
            @(Model.Form.Title) 收到新的提交
        </h3>
        <table border="1" cellspacing="0" cellpadding="5" bgcolor="" style="border-color: #eee;">
            <thead>
                <tr>
                    <th>字段</th>
                    <th>值</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Form.FormFields.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.Form.FormFields[i].DisplayName
                        </td>
                        <td>
                            @Html.DisplayFieldValue(Model.Form.FormFields[i])
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p>
        查看详情 <a href="@link" target="_blank">@link</a>
    </p>
    <h4>
        ZKEASOFT
    </h4>
    <p>
        <a href="http://www.zkea.net" target="_blank">
            http://www.zkea.net
        </a>
    </p>
    <p>
        <em>@DateTime.Now.ToString("yyyy-MM-dd")</em>
    </p>
</body>
</html>