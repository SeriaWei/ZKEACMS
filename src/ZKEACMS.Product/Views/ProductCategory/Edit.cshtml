@model ZKEACMS.Product.Models.ProductCategory
@{
    Script.Reqiured("validate").AtFoot();
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>编辑</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(ZKEACMS.Product.PermissionKeys.ManageProductCategory))
                {
                    <input type="submit" class="btn btn-primary" value="保存" data-value="@ActionType.Update" />
                    <input type="submit" class="btn btn-danger delete" value="删除" data-value="@ActionType.Delete" />
                }
                <input type="button" class="btn btn-default cancel" value="取消" />
            </div>
        }

    </div>
</div>
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(".delete").click(function () {
            return confirm("删除类别会删除对应的子类别和产品，确定要删除吗？");
        });
    </script>
}