@model ZKEACMS.Product.Models.ProductCategory
@{
    Script.Reqiured("validate").AtFoot();
}
<div class="panel panel-default">
    <div class="panel-heading">
        @L("编辑")
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(ZKEACMS.Product.PermissionKeys.ManageProductCategory))
                {
                    <input type="submit" class="btn btn-primary" value="@L("保存")" data-value="@ActionType.Update" />
                    <input type="submit" class="btn btn-danger delete" value="@L("删除")" data-value="@ActionType.Delete" />
                }
                <input type="button" class="btn btn-default cancel" value="@L("取消")" />
            </div>
        }

    </div>
</div>
@using (Script.AtFoot())
{
    <script type="text/javascript">
        $(".delete").click(function () {
            return confirm("@L("删除类别会删除对应的子类别和产品，确定要删除吗？")");
        });
    </script>
}