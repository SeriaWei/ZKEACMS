@model ZKEACMS.Product.Models.ProductCategory
@{
    Script.Reqiured("validate").AtFoot();
}
<div class="panel panel-default">
    <div class="panel-heading">
        <div>@L("New")</div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                @if (Authorizer.Authorize(ZKEACMS.Product.PermissionKeys.ManageProductCategory))
                {
                    <input type="submit" class="btn btn-primary" value="@L("Save")" data-value="@ActionType.Create" />
                }
                <input type="button" class="btn btn-default cancel" value="@L("Cancel")" />
            </div>
        }
        
    </div>
</div>