@model ZKEACMS.Article.ViewModel.ArticleTopWidgetViewModel
@{
    if (!Model.Widget.DetailPageUrl.IsNullOrEmpty())
    {
        Model.Widget.DetailPageUrl = Url.Content(Model.Widget.DetailPageUrl);
    }
    if (!Model.Widget.MoreLink.IsNullOrEmpty())
    {
        Model.Widget.MoreLink = Url.Content(Model.Widget.MoreLink);
    }
}
<div class="article-tops A">
    <ul>
        @if (Model.Articles != null)
        {
            foreach (var item in Model.Articles)
            {
                <li>
                    <a href="@Url.PostUrl(Model.Widget.DetailPageUrl, item.ID)" target="_blank">
                        @item.Title
                    </a>
                </li>
            }
            @if (Model.Widget.MoreLink.IsNotNullAndWhiteSpace())
            {
                <li class="more">
                    <a href="@Model.Widget.MoreLink">@L("More...")</a>
                </li>
            }

        }
    </ul>
</div>
