@model ZKEACMS.Article.Models.ArticleEntity
@{
    Script.Reqiured("validate").AtFoot();
    Script.Reqiured("tinymce").AtFoot();
}

<div class="panel panel-default">
    <div class="panel-heading">
        新建
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.EditorForModel()
            <div class="toolBar">
                <input type="submit" class="btn btn-primary " value="保存" data-value="@ActionType.Create" />
                <input type="submit" class="btn btn-info publish" value="发布" data-value="@ActionType.Publish" />
                <input type="button" class="btn btn-default cancel" value="取消" />
            </div>
        }
    </div>
</div>
<table>
    <tr>
        <td align="center"></td>
    </tr>
</table>